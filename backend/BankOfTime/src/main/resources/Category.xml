<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.bankoftime.models.Category">
        <table name="Category" schema="dbo" catalog="BankOfTime"/>
        <attributes>
            <id name="id">
                <column name="Id"/>
            </id>
            <basic name="name">
                <column name="Name"/>
            </basic>
            <one-to-many name="offers" mapped-by="category" target-entity="com.bankoftime.models.OfferCategory"/>
        </attributes>
    </entity>
</entity-mappings>

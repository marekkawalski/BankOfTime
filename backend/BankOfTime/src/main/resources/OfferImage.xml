<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.bankoftime.models.OfferImage">
        <table name="OfferImage" schema="dbo" catalog="BankOfTime"/>
        <attributes>
            <id name="id">
                <column name="Id"/>
            </id>
            <basic name="url">
                <column name="Url"/>
            </basic>
            <many-to-one name="offer" optional="true" target-entity="com.bankoftime.models.Offer">
                <join-column name="OfferId" referenced-column-name="Id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>

<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.bankoftime.models.Transaction">
        <table name="Transaction" schema="dbo" catalog="BankOfTime"/>
        <attributes>
            <id name="id">
                <column name="Id"/>
            </id>
            <basic name="offerId">
                <column name="OfferId"/>
            </basic>
            <basic name="status">
                <column name="Status"/>
            </basic>
            <many-to-one name="buyer" optional="true" target-entity="com.bankoftime.models.User">
                <join-column name="BuyerId" referenced-column-name="Id"/>
            </many-to-one>
            <many-to-one name="seller" optional="true" target-entity="com.bankoftime.models.User">
                <join-column name="SellerId" referenced-column-name="Id"/>
            </many-to-one>
            <one-to-one name="offer" optional="true" target-entity="com.bankoftime.models.Offer">
                <join-column name="Id" referenced-column-name="Id"/>
            </one-to-one>
        </attributes>
    </entity>
</entity-mappings>

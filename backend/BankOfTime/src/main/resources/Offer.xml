<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.bankoftime.models.Offer">
        <table name="Offer" schema="dbo" catalog="BankOfTime"/>
        <attributes>
            <id name="id">
                <column name="Id"/>
            </id>
            <basic name="shortDescryption">
                <column name="ShortDescryption"/>
            </basic>
            <basic name="price">
                <column name="Price"/>
            </basic>
            <basic name="title">
                <column name="Title"/>
            </basic>
            <basic name="location">
                <column name="Location"/>
            </basic>
            <basic name="longDescryption">
                <column name="LongDescryption"/>
            </basic>
            <basic name="offerType">
                <column name="OfferType"/>
            </basic>
            <basic name="state">
                <column name="State"/>
            </basic>
            <many-to-one name="seller" optional="true" target-entity="com.bankoftime.models.User">
                <join-column name="SellerId" referenced-column-name="Id"/>
            </many-to-one>
            <many-to-one name="buyer" optional="true" target-entity="com.bankoftime.models.User">
                <join-column name="BuyerId" nullable="false" referenced-column-name="Id"/>
            </many-to-one>
            <one-to-many name="offers" mapped-by="offer" target-entity="com.bankoftime.models.OfferCategory"/>
            <one-to-many name="images" mapped-by="offer" target-entity="com.bankoftime.models.OfferImage"/>
            <one-to-one name="transaction" optional="true" mapped-by="offer"
                        target-entity="com.bankoftime.models.Transaction"/>
        </attributes>
    </entity>
</entity-mappings>
